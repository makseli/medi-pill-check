# Veritabanı türü: sqlite, postgresql
DB_TYPE=sqlite

# SQLite dosya yolu
SQLITE_PATH=./data/sqlite/sqlite.db

# PostgreSQL bağlantı bilgileri
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=medipillcheck

# Redis bağlantı bilgileri
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Uygulama portu
PORT=8080

# Ortam (development, production)
ENVIRONMENT=development